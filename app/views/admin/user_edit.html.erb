                                    <button class="btn btn-primary pull-right">عرض</button>
                                </div>
                            </div>
                            <% end %>
                            
                        </div>
                    </div>  
                </div>                   
             </div>
             </div>

                   
                   
               

        <!-- MESSAGE BOX-->
        <%= render 'logout' %>
        <% end %>
        <%= javascript_include_tag 'admin' %>