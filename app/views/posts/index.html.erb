            <li><a href="<%= root_path %>">الرئسيــة</a><i class="fa fa-angle-right"></i></li>
            <li class="current">أنباء</li>
          </ul>
        </div><!--//breadcrumbs-->
      </header>
      <div class="page-content">
        <div class="row page-row">
          <div class="news-wrapper col-md-8 col-sm-7 pull-right">
            <% @posts.each do |post| %>
                <article class="news-item page-row has-divider clearfix row">
                  <figure class="thumb col-md-2 col-sm-3 col-xs-4 pull-right">
                    <%= image_tag("news/news-thumb-1.jpg", class: "img-responsive") %>
