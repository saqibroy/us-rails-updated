<% if @l == :fr %>
    <div class="page-wrapper">
      <header class="page-heading clearfix">
        <h1 class="heading-title pull-left">ACTUALITÉS</h1>

        <div class="breadcrumbs pull-right">
          <ul class="breadcrumbs-list">
            <li class="breadcrumbs-label">Vous étes là:</li>
            <li><a href="<%= root_path %>">ACCEUIL</a><i class="fa fa-angle-right"></i></li>
            <li class="current">ACTUALITÉS</li>
          </ul>
        </div><!--//breadcrumbs-->
      </header>
      <div class="page-content">
        <div class="row page-row">
          <div class="news-wrapper col-md-8 col-sm-7">
            <% @posts.each do |post| %>
                <article class="news-item page-row has-divider clearfix row">
                  <figure class="thumb col-md-2 col-sm-3 col-xs-4">
                    <%= image_tag("news/news-thumb-1.jpg", class: "img-responsive") %>
                  </figure>
                  <div class="details col-md-10 col-sm-9 col-xs-8">
                    <h3 class="title"><a href="<%= post_path post %>"><%= post.title %></a></h3>

                    <p>
                      <%= simple_format(post.body, {}, sanitize: false) %>
                    </p>
                    <a class="btn btn-theme read-more" href="<%= post_path post %>">Lire plus<i class="fa fa-chevron-right"></i></a>
                  </div>
                </article><!--//news-item-->
            <% end %>
            <ul class="pagination">
              <li class="disabled"><a href="#">&laquo;</a></li>
              <li class="active"><a href="#">1<span class="sr-only">(current)</span></a></li>
              <li><a href="#">2</a></li>
              <li><a href="#">3</a></li>
              <li><a href="#">4</a></li>
              <li><a href="#">5</a></li>
              <li><a href="#">&raquo;</a></li>
            </ul>

          </div><!--//news-wrapper-->

          <aside class="page-sidebar  col-md-3 col-md-offset-1 col-sm-4 col-sm-offset-1">


          </aside>

        </div><!--//page-row-->
      </div><!--//page-content-->
    </div><!--//page-->
<% else %>
